<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="300dp"
        android:layout_height="135dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="@drawable/home_image_blue"
        />

    <Button
        android:id="@+id/changeInfo"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="My Contact Info"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:drawableStart="@mipmap/ic_person_white"
        android:background="@drawable/home_button_background"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:drawablePadding="-10dp"
        android:onClick="viewProfile"
    />

    <Button
        android:id="@+id/nfcSettings"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="NFC Settings"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:background="@drawable/home_button_background"
        android:layout_marginBottom="10dp"
        android:drawableStart="@mipmap/ic_settings_white"
        android:paddingLeft="15dp"
        android:drawablePadding="-15dp"
        android:onClick="changeNFC"
        />

    <Button
        android:id="@+id/sendInfo"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Send"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:background="@drawable/home_button_background"
        android:layout_marginBottom="10dp"
        android:drawableStart="@mipmap/ic_send_white"
        android:paddingLeft="15dp"
        android:drawablePadding="-25dp"
        android:onClick="beamContact"
        />

    <Button
        android:id="@+id/receiveInfo"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Receive"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:background="@drawable/home_button_background"
        android:layout_marginBottom="10dp"
        android:drawableStart="@mipmap/ic_receive_white"
        android:paddingLeft="15dp"
        android:drawablePadding="-25dp"
        android:onClick="receiveContact"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NFC is turned "
            android:textSize="25sp"
            android:textColor="@color/brandPrimaryColor"
            />

        <TextView
            android:id="@+id/nfcStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            />

        </LinearLayout>
</LinearLayout>
